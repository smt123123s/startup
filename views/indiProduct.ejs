<%- include('common/header'); %>
<%- include('common/navagation'); %>

<div class="top"></div>

<% for (var i = 0; i < product.length; i++) { %>

<div class="container-fluid">
   
        <div class="row">
        
            <div class="col-1"></div>
            
            <div class="col-2">
                <a href="/sellEvent">
                    <img src="/img/label.png" alt="label" class ='img-fluid'>
                </a>
            </div>
            
            <div class="col-5">

                <img src="<%= product[i].pImg %>" alt="label" class = 'img-fluid w-100'>

            </div>
                
            <div class="col-3 productTitle">
                
                <div>
                    <%= product[i].pName %>
                </div>

                <div class = 'productSubTitle'>
                    代號：<%= product[i].pId %>
                </div>

                <div class="mt-5 pt-5">
                    頂手費: $<%= product[i].pCost %>
                </div>

                <a href="/buyEvent">

                    <button class = 'btn btn-light w-50 mt-5'>
                        查詢登記
                    </button>

                </a>

            </div>
            
            
        </div>

        <div class="row pt-5">

            <div class="col-3"></div>

            <div class="col-5 tagInformation" >
                <% if (product[i].pTag[0] != 0) { %>
                    <a href="/tag/創業之選"  class = 'mr-1'> 
                        <div  class = 'btn btn-primary'><%= product[i].pTag[0] %></div>
                    </a>
                <% } %>
                <% if (product[i].pTag[1] != 0) { %>
                    <a href="/tag/地點方便" class = 'mr-1'>
                        <div  class = 'btn btn-secondary'><%= product[i].pTag[1] %></div>
                    </a>                   
                <% } %>
                <% if (product[i].pTag[2] != 0) { %>
                    <a href="/tag/小本經營"  class = 'mr-1'>
                        <div  class = 'btn btn-success'><%= product[i].pTag[2] %></div>
                    </a>
                <% } %>
                <% if (product[i].pTag[3] != 0) { %>
                    <a href="/tag/平租之選"  class = 'mr-1'>
                        <div  class = 'btn btn-danger'><%= product[i].pTag[3] %></div>
                    </a>
                <% } %>
            </div>

        </div>


        <div class="row mt-5">
            <div class="col-3"></div>
            
            <div class="col-5">

                <div class="productContent">
                    業務重點
                </div>

                <ul class = 'mt-4 productSubContent'>

                <% for (var j = 0; j < product[i].pDescription.length; j++) { %>
                    
                    <li><%= product[i].pDescription[j] %></li>
                    
                <% } %>

                </ul>
            </div>
        </div>

        <div class="row mt-5 pt-5">

            <div class="col-3"></div>
                
            <div class="col-5">
    
                <div class="productContent mb-4">
                    業務簡介
                </div>

                <table class = 'table table-borderless table-sm table-striped'>
                    <tbody>
                        <tr>
                            <td class ='indiPDescription'>地區：<%= product[i].pPosition %></td>
                            <td class ='indiPDescription'>行業：<%= product[i].pCategory %></td>
                        </tr>
                        <tr>
                            <td class ='indiPDescription'>出讓原因：<%= product[i].pReason %></td>
                            <td class ='indiPDescription'>物業形式：<%= product[i].pType %></td>
                        </tr>
                        <tr>
                            <td class ='indiPDescription'>東主參與程度：<%= product[i].pLevel %></td>
                            <td class ='indiPDescription'>項目狀況：<%= product[i].pFormat %></td>
                        </tr>
                        <tr>
                            <td class ='indiPDescription'>面積：<%= product[i].pArea %>呎</td>
                            <td class ='indiPDescription'>租金：$<%= product[i].pRent %></td>
                        </tr>
                        <tr>
                            <td class ='indiPDescription'>頂手費：$<%= product[i].pCost %></td>
                            <% if (product[i].pRevenue == "設備轉讓") { %>
                                <td class ='indiPDescription'>參考利潤：<%= product[i].pRevenue %></td>
                            <% } else { %>
                                <td class ='indiPDescription'>參考利潤：$<%= product[i].pRevenue %></td>
                            <% } %>
                        </tr>
                    </tbody> 
                </table>                  
            </div>    
        </div>


        <div class="row mt-5">

                <div class="col-3"></div>
                        
                <div class="col-5 productContent">
                    業務查詢
                </div>
                        
        </div>
        
        <form action="/buyEvent/upload" method = 'POST' class = 'mt-5 needs-validation' novalidate>
        
            
            <div class="form-group row">
            
                    <div class="col-3"></div>
            
                    <label class = 'label-font mr-2 mt-2'>姓名</label>
                    <div class="col-2">
                        <input class = 'mt-1 form-control ' type = 'text' placeholder = '請輸入您的名字~' name = 'bName' required>
                        <div class="invalid-feedback">
                            請填寫你的名字~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
            
             
                    <label class = 'label-font mr-2 mt-2'>心水行業</label>
                    <div class="col-2">
                        <select name="bOccupation" class = 'form-control mt-1' required>
                            <option value =''>--揀一個--</option>
                            <option value ='教育'>教育</option>
                            <option value ='餐飲'>餐飲</option>
                            <option value ='PartyRoom'>Partyroom</option>
                            <option value ='美容'>美容</option>
                            <option value ='零售'>零售</option>
                            <option value ='服務'>服務</option>
                            <option value ='時裝'>時裝</option>
                            <option value ='洗衣'>洗衣</option>
                            <option value= '其他'>其他</option>
                        </select>        
                            <div class="invalid-feedback">
                                請填寫你的心水行業~
                            </div>
                            <div class="valid-feedback">
                                OK！
                            </div>
                    </div>
                
                </div>
            
                <div class="form-group row">
            
                    <div class="col-3"></div>
            
                    <label class = 'label-font mr-2 mt-2'>電話</label>
                    <div class="col-2">
                        <input class = 'mt-1 form-control ' type = 'number' placeholder = '填寫電話~' name = 'bPhone' required>
                        <div class="invalid-feedback">
                            請填寫您的電話~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
            
                   
                    <label class = 'label-font mr-2 mt-2'>資金預算 </label>
                    <div class="col-2">
                        <input class = 'mt-1 form-control' type = 'text' placeholder = '估下預算~' name = 'bBudget' required>
                        <div class="invalid-feedback">
                            請填寫你的預算~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
            
                </div>
            
                <div class="form-group row">
            
                    <div class="col-3"></div>
            
                    <label class = 'label-font mr-2 mt-2 '>電郵</label>
                    <div class="col-2" >
                        <input class = 'mt-1 form-control' type = 'email' placeholder = '請填寫您的電郵~' name = 'bEmail' required>
                        <div class="invalid-feedback">
                            請填寫你的電郵~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
            
                  
            
                    <label class = 'label-font mr-2 mt-2'>投入程度</label>
                    <div class="col-2">
                        <input class = 'mt-1 form-control ' type = 'text' placeholder = '你想投入幾多~' name = 'bPrice' required>
                        <div class="invalid-feedback">
                            請填寫你的投入程度~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
                    
                </div>
            
                <div class="form-group row">
            
                    <div class="col-3"></div>
                    <div class="col-5 form-check mt-4 ml-4">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">
                            我同意W<sup>2</sup>使用我的個人資料及向我提供有關W<sup>2</sup>的生意買賣資訊
                        </label>
                        <div class="invalid-feedback">
                                請同意~
                        </div>
                        <div class="valid-feedback">
                            OK！
                        </div>
                    </div>
            
                </div>
            
                <div class="form-group row">
            
                    <div class="col-4"></div>
            
                    <div class="col-5">
                        <button type="submit" class="btn btn-outline-dark mt-5 ml-5 w-50" tabindex = '0' id ='sellSubmit'>提交~</button>
                    </div>
            
                </div>
            </form>
            
            <script>
                // Example starter JavaScript for disabling form submissions if there are invalid fields
                (function() {
                      'use strict';
                    window.addEventListener('load', function() {
                    // Fetch all the forms we want to apply custom Bootstrap validation styles to
                    var forms = document.getElementsByClassName('needs-validation');
                    // Loop over them and prevent submission
                    var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                        }, false);
                    });
                    }, false);
                })();
            </script>
        

</div>

    <br><br><br><br><br>
 

<div class="row">
    <div class="col-10"></div>
    <div class="col">
        <a href="#" onclick="javascript:history.back(-1);">
            <button class = 'btn btn-outline-dark '>返回上一頁~</button>
        </a>
    </div>
</div>

<% } %>

<div class = 'relateProductTitle col-3'>
                
       <div>相關生意買賣商機</div>
        
        <table class ='table table-sm table-striped table-borderless relateProduct-table'>
            <thead>
                <tr>
                    <th>生意名稱</th>
                    <th>頂手費</th>
                    <th>參考利潤</th>
                </tr>
            </thead>

            <tbody>

                <% for(var j = 0 ; j < relateProduct.length; j++) { %>
                <tr>
                    <th>
                        <a href="/product/<%= relateProduct[j].pId %>">
                            <%= relateProduct[j].pName %>
                        </a>
                    </th>
                    <th>
                        $<%= relateProduct[j].pCost %>
                    </th>
                    
                    <% if (relateProduct[j].pRevenue == "設備轉讓") { %>
                        <th>
                            <%= relateProduct[j].pRevenue %>
                        </th> 
                    <% } else { %>
                        <th>
                            $ <%= relateProduct[j].pRevenue %>
                        </th>

                    <% } %>
                    
                </tr>

                <% } %>
            </tbody>
        </table>
    </div>


<%- include('common/footer'); %>

